@{
    ViewData["Title"] = "Home";
}

<div id="content"></div>

@section Scripts{    
    <script>
        System.config({
            packages: {
                app: { defaultExtension: 'js' },
                lib: { defaultExtension: 'js' }
            },
            map: {
                'react': './lib/react/react.js',
                'react-dom':'./lib/react/react-dom.js'
            }
        });
        System.import('app/main')
            .then(null, console.error.bind(console));
    </script>
}